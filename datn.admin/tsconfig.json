{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strictPropertyInitialization": false,
    "target": "es2016",
    "lib": [
      "es2017",
      "dom",
      "scripthost"
    ],
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
